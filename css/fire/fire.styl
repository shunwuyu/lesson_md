random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

for num in 1..200
    .g-ball:nth-child({num})
        $width = random(0,50)
        $left = random(0, 70) 
        // width $width=
        $delay = random(0, 3000)/1000
        width unit($width, 'px')
        height unit($width, 'px')
        left unit($left, 'px') - 50px
        animation: movetop 1s linear unit(0 - $delay, 's') infinite;

