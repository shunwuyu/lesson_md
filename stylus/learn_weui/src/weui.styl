$fw_bold = 700
$normal_fz = 17px
$w_color = #ffffff
$primary_color = #07c160

mcenter()
  margin-left auto
  margin-right auto

.weui-btn
  position relative
  display block
  width 184px
  mcenter()
  padding 8px 24px
  box-sizing border-box
  font-weight $fw_bold
  font-size $normal_fz
  text-align center
  text-decoration none
  color $w_color
  line-height 1.4118
  border-radius 4px
  overflow hidden
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  &+.weui-btn
    margin-top 16px
  &.weui-btn_primary
    background-color $primary_color
  &.weui-btn_disabled
    color: rgba(0,0,0,0.2);
    background-color: #f2f2f2;