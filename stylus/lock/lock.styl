$bgi = 'https://images.unsplash.com/photo-1440613905118-99b921706b5c?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=255b304482a2f50d0917f3de7b06251e%27'
*
  margin 0
  padding 0
html, body
  width 100%
  height 100%
.page
  width 100%
  height 100%
  overflow hidden
  background-image url($bgi)
  background-repeat no-repeat
  background-size auto 100%
.page_hd
  width 1.866667rem /* 70/37.5 */
  height .555rem
  color #fff
  font-size .46rem
  margin 2.96rem auto
.page_content_number
  width 6.96rem
  display flex
  margin-left 1.45rem
.number
  width 1.62rem
  height 1.62rem
  line-height 1.62rem
  border-radius 50%
  border 2px solid #81969c
  font-size 25px
  text-align center
  font-weight 100
  color #e8ffff
  margin-bottom .72rem
.numbermid, .numberleft
  margin-right 1.03rem
.page_foot 
  display flex
  padding-top .59rem
  margin-bottom .259rem
.page_font
  color rgba(255, 255, 255, .5)
  font-size .444rem
.page_foot__left
  @extend .page_font
  margin-left .25rem
  flex 1
.page_foot__right
  @extend .page_font
  width 1.88rem
