.wrapper {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.logo {
  text-align: center;
  padding: 40rpx 0;
}

.logo image {
  width: 94rpx;
  height: 94rpx;
}

.van-tab__pane {
  margin-top: 24px;
}

.form view {
  border-radius: 2px;
  background: #fff;
}

.form input {
  width: 100%;
  padding-left: 30rpx;
  color: #000;
  box-sizing: border-box;
  height: 100rpx;
  border-radius: 4rpx;
  border-bottom: 1rpx solid #efefef;
}

.form input:last-child {
  border-bottom: none;
}

.login {
  padding:0;
  width: 100%;
  margin-top: 24px;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 8px;
  background-image: linear-gradient(-180deg, #2fcb53, #269f42 90%);
}

.security-hint {
  margin: 48rpx 0;
  font-size: 12px;
  color: #eee;
}

.ad {
  margin-top: 48rpx;
}