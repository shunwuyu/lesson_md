<view class="wrapper">
  <!--repeat-->
  <!-- 每一个组 有个间隔 margin-bottom  -->
  <view wx:for="{{ articleList }}" wx:for-item="group" wx:key="{{ group.date }}" class="group">
    <view class="group-bar">
      <view class="group-title {{ group.formateDate === '今日' ? 'on' : ''}}">{{ group.formateDate }}</view>
    </view>
    <view class="group-content">
      <!--repeat-->
      <view wx:for="{{ group.articles }}" 
      wx:for-item="item" 
      wx:key="{{ item.contentId }}" 
      data-item="{{ item }}" 
      bindtap="showDetail" 
      class="group-content-item {{ item.hasVisited ? 'visited' : '' }}">
        <view class="group-content-item-desc ellipsis-multi-line ellipsis-line-3">
        {{ item.title }}
        </view>
          <image mode="aspectFill" 
          class="group-content-item-img" 
          src="{{ item.cover || defaultImg.coverImg }}">
          </image>
      </view>
    </view>
  </view>

  <view hidden="{{ hasMore }}" class="no-more">暂时没有更多内容</view>
</view>