.container{
  position: relative;
  width: 100%; 
  height: 100vh; 
}
 .location{
  width: 100%;
  height: 88rpx;
  z-index: 999;
  top: 0;
  background-color: #fff;
  font-size: 28rpx;
  box-shadow:3px 5px 10px #e0e0e0; 
}
.location-city{
  height: 88rpx;
  position: absolute;
  width: 160rpx;
  line-height: 88rpx;
  text-align: center;
  color: #999999;
  
}
.location-city::after{
  border-left: 4px solid transparent;  
  border-right: 4px solid transparent;  
  border-top: 4px solid #a4a4a4;  
  content: "";  
  position: relative;      
  width: 0; 
  top: 25rpx;
  
}
.location-input{
  height: 88rpx;
  width: 470rpx;
  margin-left: 160rpx;
  line-height: 88rpx;
  /* background: red; */
}
.location-cancel{
  width: 120rpx;
  height: 88rpx;
  position: absolute;
  right: 0;
  top: 0;
  line-height: 88rpx;
  color: #999999;
}
.didiMap{
   
    height: 100%;
    width: 100%;   
  
  }

.address{
     position: absolute;
     width: 710rpx;
     height: 120rpx;
     margin-left: 20rpx;
     margin-right: 20rpx;
     background-color: #fff;
     margin-top: 950rpx;
     box-sizing: border-box;
     display: flex;
     justify-items: center;
     align-items: center;
   }
   .address-desc{
     font-size: 26rpx;  
     height: 80rpx;
   }
   .address-desc .blur{
     font-size: 30rpx;
     color: #333333;
   }
   .address-desc .detailed{
     padding-top: 10rpx;
      color: #c7c7c7;
   }
   .address-btn{
     flex: 1;
     text-align: center;
     color: #666666;
   }