.goods {
  padding-bottom: 20vh;
}
.goods-img {
  width: 100%;
  display: block;
}
.goods-message .van-cell__title {
  font-size: 13pt;
}

.goods-message .van-cell__label {
  color: #f44;
}

.goods-express {
  color: #999;
  font-size: 12pt;
}

.goods-express .van-cell {
  color: #999;
  font-size: 12px;
  padding: 10rpx 30rpx;
}

.goods-express .van-col {
  text-align: left;
}

.goods-cell-group {
  margin: 0 0;
}

.goods-cell-group .van-cell__value {
  color: #999;
}

.goods-tag {
  margin-left: 10rpx;
}

.goods-action {
  position: relative!important;
}